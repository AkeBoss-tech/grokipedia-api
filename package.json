{
  "name": "grokipedia-api",
  "version": "0.2.0",
  "description": "A client for accessing Grokipedia content - an open-source, comprehensive collection of all knowledge. Works in Node.js and browsers.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/browser/grokipedia-api.esm.js",
  "browser": "dist/browser/grokipedia-api.umd.js",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/index.js",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "browser": {
        "import": "./dist/browser/grokipedia-api.esm.js",
        "require": "./dist/browser/grokipedia-api.umd.js",
        "types": "./dist/index.d.ts"
      },
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc",
    "build:browser": "rollup -c",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "grokipedia",
    "wiki",
    "knowledge",
    "api",
    "client",
    "wikipedia",
    "encyclopedia"
  ],
  "author": "Akash Dubey <akashdub06@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AkeBoss-tech/grokipedia-api.git"
  },
  "bugs": {
    "url": "https://github.com/AkeBoss-tech/grokipedia-api/issues"
  },
  "homepage": "https://github.com/AkeBoss-tech/grokipedia-api#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.map",
    "README_NPM.md",
    "README.md",
    "LICENSE"
  ],
  "readme": "README.md",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.0.0",
    "rollup": "^2.79.2",
    "ts-jest": "^29.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  }
}
